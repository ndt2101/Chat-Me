<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/separate_day_image_chat_to_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="21/10/2001"
        android:padding="3dp"
        android:textAlignment="center"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt_image_to_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/huan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separate_day_image_chat_to_row"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image_messenger_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_style"
        android:padding="5dp"
        android:cropToPadding="true"
        android:src="@drawable/nguyenhuuda"
        app:layout_constraintEnd_toStartOf="@+id/avt_image_to_row"
        app:layout_constraintTop_toTopOf="@+id/avt_image_to_row"
        app:layout_constraintWidth_max="250dp"
        app:layout_constraintHeight_max="250dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/time_of_chat_image_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="10:00"
        android:paddingEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/image_messenger_to_row"
        app:layout_constraintTop_toBottomOf="@id/image_messenger_to_row" />

</androidx.constraintlayout.widget.ConstraintLayout>