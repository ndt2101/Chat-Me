<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/huan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.vanniktech.emoji.EmojiImageView
        android:id="@+id/image_messenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_style"
        android:padding="5dp"
        android:src="@drawable/nguyenhuuda"
        app:layout_constraintEnd_toStartOf="@+id/avt"
        app:layout_constraintTop_toTopOf="@+id/avt"
        app:layout_constraintWidth_max="250dp"
        app:layout_constraintHeight_max="250dp"
        android:scaleType="centerCrop" />

</androidx.constraintlayout.widget.ConstraintLayout>